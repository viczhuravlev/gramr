{
  "name": "gramr",
  "version": "0.0.1",
  "description": "React a UI component library",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "types": "lib/types/index.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "build": "webpack --mode production",
    "start": "webpack --mode development -w",
    "lint": "tslint src/**/*.{ts.tsx}",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "prettier": "prettier --write src/**/*.{ts,tsx,js,md}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/viczhuravlev/gramr.git"
  },
  "homepage": "https://github.com/viczhuravlev/gramr#readme",
  "bugs": {
    "url": "https://github.com/viczhuravlev/gramr/issues"
  },
  "keywords": [
    "react",
    "webpack",
    "typescript"
  ],
  "author": "Victor Zhuravlev",
  "license": "MIT",
  "dependencies": {
    "@emotion/core": "10.0.2",
    "@emotion/styled": "10.0.2",
    "@types/react": "16.4.18",
    "@types/react-dom": "16.0.9",
    "react": "16.6.0",
    "react-dom": "16.6.0"
  },
  "peerDependencies": {
    "react": ">=16.6.0 < 17.0.0",
    "react-dom": ">=16.6.0 < 17.0.0"
  },
  "devDependencies": {
    "@types/enzyme": "3.1.15",
    "@types/enzyme-adapter-react-16": "1.0.3",
    "@types/jest": "23.3.9",
    "awesome-typescript-loader": "5.2.1",
    "babel-plugin-emotion": "10.0.2",
    "enzyme": "3.7.0",
    "enzyme-adapter-react-16": "1.7.0",
    "enzyme-to-json": "3.3.4",
    "husky": "1.1.3",
    "jest": "23.6.0",
    "lint-staged": "8.1.0",
    "prettier": "1.15.2",
    "ts-jest": "23.10.4",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.15.0",
    "tslint-react": "3.6.0",
    "typescript": "3.1.6",
    "webpack": "4.25.1",
    "webpack-cli": "3.1.2",
    "webpack-node-externals": "1.7.2"
  },
  "lint-staged": {
    "linters": {
      "*.{js,md,ts,tsx}": [
        "npm run prettier",
        "npm run lint",
        "git add"
      ]
    },
    "ignore": [
      "**/lib/**"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
