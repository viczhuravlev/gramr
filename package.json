{
  "name": "gramr",
  "version": "0.0.1",
  "description": "React a UI component library",
  "main": "lib/index.js",
  "types": "lib/types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/viczhuravlev/gramr.git"
  },
  "homepage": "https://github.com/viczhuravlev/gramr#readme",
  "bugs": {
    "url": "https://github.com/viczhuravlev/gramr/issues"
  },
  "keywords": [
    "react",
    "webpack",
    "typescript",
    "emotion",
    "ui"
  ],
  "author": "Victor Zhuravlev <vzhuravlev15@gmail.com>",
  "license": "GPL version 3",
  "scripts": {
    "build": "npm run build:source && npm run build:docz",
    "build:docz": "docz build",
    "build:source": "npm run build:lib && npm run build:types",
    "build:lib": "webpack --mode production",
    "build:types": "tsc --emitDeclarationOnly",
    "lint": "npm run lint:code && npm run lint:types",
    "lint:code": "npm run lint:code:styles && npm run lint:code:source",
    "lint:code:styles": "stylelint './src/**/*.{ts,tsx}'",
    "lint:code:source": "eslint './src/**/*.{ts,tsx}'",
    "lint:types": "npm run lint:types:check && npm run lint:types:coverage",
    "lint:types:check": "tsc --noEmit",
    "lint:types:coverage": "type-coverage --detail --at-least 99",
    "dev": "docz dev",
    "prettier": "prettier --write 'src/**/*.{ts,tsx,mdx}'",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@emotion/core": "10.0.7",
    "@emotion/styled": "10.0.7",
    "react": "16.8.3",
    "react-dom": "16.8.3",
    "typescript": "3.3.3"
  },
  "peerDependencies": {
    "react": ">=16.6.0 < 17.0.0",
    "react-dom": ">=16.6.0 < 17.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.3.3",
    "@babel/preset-env": "7.3.1",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-typescript": "7.3.3",
    "@svgr/webpack": "4.1.0",
    "@types/enzyme": "3.1.18",
    "@types/enzyme-adapter-react-16": "1.0.4",
    "@types/jest": "24.0.6",
    "@types/react": "16.8.4",
    "@types/react-dom": "16.8.2",
    "@types/react-test-renderer": "16.8.1",
    "@typescript-eslint/parser": "1.4.0",
    "babel-jest": "24.1.0",
    "babel-loader": "8.0.5",
    "babel-plugin-emotion": "10.0.7",
    "docz": "0.13.7",
    "docz-theme-default": "0.13.7",
    "eslint": "5.14.1",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "4.0.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-react": "7.12.4",
    "eslint-plugin-typescript": "0.14.0",
    "husky": "1.3.1",
    "jest": "24.1.0",
    "jest-svg-transformer": "1.0.0",
    "lint-staged": "8.1.4",
    "prettier": "1.16.4",
    "react-test-renderer": "16.8.3",
    "source-map-loader": "0.2.4",
    "stylelint": "9.10.1",
    "stylelint-config-standard": "18.2.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.5.2",
    "ts-jest": "24.0.0",
    "type-coverage": "1.10.0",
    "webpack": "4.29.5",
    "webpack-cli": "3.2.3",
    "webpack-node-externals": "1.7.2"
  },
  "lint-staged": {
    "linters": {
      "*.{js,ts,tsx}": [
        "prettier --write",
        "git add",
        "eslint",
        "stylelint",
        "type-coverage --at-least 99",
        "jest --findRelatedTests"
      ],
      "*.mdx": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "**/lib/**"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:types:check && lint-staged"
    }
  }
}
