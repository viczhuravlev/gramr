{
  "name": "gramr-ui",
  "version": "0.0.1",
  "description": "React a UI component library",
  "main": "lib/gramr-ui.js",
  "types": "lib/types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/viczhuravlev/gramr.git"
  },
  "homepage": "https://github.com/viczhuravlev/gramr#readme",
  "bugs": {
    "url": "https://github.com/viczhuravlev/gramr/issues"
  },
  "keywords": [
    "react",
    "linaria",
    "webpack",
    "typescript"
  ],
  "author": "Victor Zhuravlev <vzhuravlev15@gmail.com>",
  "license": "GPL version 3",
  "scripts": {
    "dev": "start-storybook -p 8081 -c 'config/storybook'",
    "build": "NODE_ENV=production npm run build:source && npm run build:docs",
    "build:docs": "build-storybook -c 'config/storybook'",
    "build:docs:deploy": "npm run build:docs && gh-pages -d storybook-static",
    "build:source": "npm run build:source:lib && npm run build:source:types",
    "build:source:lib": "webpack",
    "build:source:types": "tsc --emitDeclarationOnly",
    "lint": "npm run lint:code && npm run lint:types",
    "lint:code": "npm run lint:code:styles && npm run lint:code:source",
    "lint:code:styles": "stylelint './src/**/*.{ts,tsx}'",
    "lint:code:source": "eslint './src/**/*.{ts,tsx}'",
    "lint:types": "npm run lint:types:check && npm run lint:types:coverage",
    "lint:types:check": "tsc --noEmit",
    "lint:types:coverage": "type-coverage --ignore-catch --at-least 99 --project src",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prettier": "prettier --write 'src/**/*.{ts,tsx,mdx}'"
  },
  "dependencies": {
    "linaria": "1.3.3",
    "react": "16.13.1",
    "react-dom": "16.13.1"
  },
  "peerDependencies": {
    "react": ">=16.6.0 < 17.0.0",
    "react-dom": ">=16.6.0 < 17.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.11.1",
    "@babel/preset-env": "7.11.0",
    "@babel/preset-react": "7.10.4",
    "@babel/preset-typescript": "7.10.4",
    "@commitlint/cli": "9.1.1",
    "@commitlint/config-conventional": "9.1.1",
    "@storybook/addon-actions": "5.3.19",
    "@storybook/addon-links": "5.3.19",
    "@storybook/addon-storysource": "5.3.19",
    "@storybook/addons": "5.3.19",
    "@storybook/react": "5.3.19",
    "@svgr/webpack": "5.4.0",
    "@testing-library/jest-dom": "5.11.2",
    "@testing-library/react": "10.4.8",
    "@testing-library/user-event": "12.1.0",
    "@types/jest": "26.0.9",
    "@types/react": "16.9.44",
    "@types/react-dom": "16.9.8",
    "@types/react-test-renderer": "16.9.3",
    "@typescript-eslint/eslint-plugin": "3.8.0",
    "@typescript-eslint/parser": "3.8.0",
    "babel-jest": "26.2.2",
    "babel-loader": "8.1.0",
    "css-loader": "4.2.1",
    "eslint": "7.6.0",
    "eslint-config-airbnb-typescript": "9.0.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jest": "23.20.0",
    "eslint-plugin-jest-dom": "3.1.6",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-react": "7.20.5",
    "eslint-plugin-react-hooks": "4.0.8",
    "eslint-plugin-testing-library": "3.4.1",
    "gh-pages": "2.0.1",
    "husky": "4.2.5",
    "jest": "26.2.2",
    "jest-svg-transformer": "1.0.0",
    "lint-staged": "10.2.11",
    "mini-css-extract-plugin": "0.9.0",
    "prettier": "2.0.5",
    "react-docgen-typescript-loader": "3.7.2",
    "react-test-renderer": "16.13.1",
    "source-map-loader": "1.0.1",
    "storybook-addon-react-docgen": "1.2.42",
    "stylelint": "13.6.1",
    "stylelint-config-recess-order": "2.1.0",
    "stylelint-config-standard": "20.0.0",
    "stylelint-order": "4.1.0",
    "type-coverage": "2.9.0",
    "typescript": "3.9.7",
    "webpack": "4.44.1",
    "webpack-bundle-analyzer": "3.8.0",
    "webpack-cli": "3.3.12",
    "webpack-node-externals": "2.5.1"
  }
}
